@model IEnumerable<Sell_Train_Ticket.Models.Train>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Trains</h1>

<a href="/Train/Add" class="btn btn-primary">New Train</a>
<p class="text-danger">@ViewBag.Message</p>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var train in Model)
            {
                <tr class="table-light">
                    <td>@train.Name</td>
                    <td class="">
                        <a href="/Train/Edit/@train.Id" class="btn btn-warning">Edit</a>
                        <a href="/Train/Delete/@train.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <tr>
        <td>
            <h2 class="text-center mt-4">No Train founded</h2>
        </td>
    </tr>
}

