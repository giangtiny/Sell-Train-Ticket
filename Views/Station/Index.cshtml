@model IEnumerable<Sell_Train_Ticket.Models.Station>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Stations</h1>

<a href="/Station/Add" class="btn btn-primary">New Station</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Parking time</th>
                <th>Route</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var station in Model)
            {
                <tr class="table-light">
                    <td>@station.Name</td>
                    <td>@station.ParkingTime</td>
                    <td>@station.Route.Name</td>
                    <td class="">
                        <a href="/Station/Edit/@station.Id" class="btn btn-warning">Edit</a>
                        <a href="/Station/Delete/@station.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <tr>
        <td>
            <h2 class="text-center mt-4">No Station founded</h2>
        </td>
    </tr>
}
