@model IEnumerable<Sell_Train_Ticket.Models.Route>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Routes</h1>

<a href="/Route/Add" class="btn btn-primary">New Route</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var route in Model)
            {
                <tr class="table-light">
                    <td>@route.Name</td>
                    <td class="">
                        <a href="/Route/Edit/@route.Id" class="btn btn-warning">Edit</a>
                        <a href="/Route/Delete/@route.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <tr>
        <td>
            <h2 class="text-center mt-4">No Route founded</h2>
        </td>
    </tr>
}
