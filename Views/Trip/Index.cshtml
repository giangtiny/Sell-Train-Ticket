@model IEnumerable<Sell_Train_Ticket.Models.Trip>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Trips</h1>

<a href="/Trip/Add" class="btn btn-primary">New Trip</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Route</th>
                <th>Departure Date</th>
                <th>Moving Time</th>
                <th>Train</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr class="table-light">
                    <td>@trip.Route.Name</td>
                    <td>@trip.DepartureDate.ToString("d")</td>
                    <td>@trip.DepartureTime to @trip.ArrivalTime</td>
                    <td>@trip.Train.Name</td>
                    <td class="">
                        <a href="/Trip/Edit/@trip.Id" class="btn btn-warning">Edit</a>
                        <a href="/Trip/Delete/@trip.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <tr>
        <td>
            <h2 class="text-center mt-4">No Trip founded</h2>
        </td>
    </tr>
}

