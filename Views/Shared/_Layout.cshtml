<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar bg-dark">
        <div class="container">
            <div class="nav">
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("Customer", "Index", "Customer", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("Station", "Index", "Station", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("Route", "Index", "Route", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("Train", "Index", "Train", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("Wagon", "Index", "Wagon", new { area = "" }, new { @class = "nav-link" })
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>