@model IEnumerable<Sell_Train_Ticket.Models.Wagon>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Wagons</h1>

<a href="/Wagon/Add" class="btn btn-primary">New Wagon</a>
<p class="text-danger">@ViewBag.Message</p>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Train</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wagon in Model)
            {
                <tr class="table-light">
                    <td>@wagon.Name</td>
                    <td>@wagon.Train.Name</td>
                    <td class="">
                        <a href="/Wagon/Edit/@wagon.Id" class="btn btn-warning">Edit</a>
                        <a href="/Wagon/Delete/@wagon.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <tr>
        <td>
            <h2 class="text-center mt-4">No Wagon founded</h2>
        </td>
    </tr>
}

